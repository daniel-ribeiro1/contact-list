{{>partials/header}}

<div class="container white">
    <div class="banner blue add-contact">   
        <p>Adicionar contato</p>
    </div>
    <form method="POST" class="contact-data"> 
        <div class="link-actions">
            <button type="submit" class="link blue">Adicionar contato</button>
            <a href="#" class="link">Remover dos favoritos</a>
            <a href="#" class="link red">Apagar</a>
        </div>

        <label>
            Nome: 
            <input type="text" name="name"/>
        </label>
        <label>
            Telefone:
            <input type="tel" name="phone" pattern="\+([0-9]{2})( {0,}|)(\(|)[0-9]{2}(\)|)( {0,}|)([0-9]|)( {0,}|)([0-9]{4})((|-)| {0,})([0-9]{4})" placeholder="(+99) 9 9999-9999"/>
        </label>
    </form>
</div>

{{>partials/footer}}